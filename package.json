{
  "name": "ccmcomponents",
  "version": "1.0.9",
  "description": "",
  "keywords": [],
  "author": "Hamza Khalifa",
  "source": "src/index.tsx",
  "main": "dist/index.umd.js",
  "unpkg": "dist/index.umd.js",
  "module": "./dist/index.modern.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && microbundle --format umd --jsx React.createElement",
    "watch": "npm run clean && microbundle watch --no-compress --format umd --jsx React.createElement",
    "dev": "npm run watch",
    "test": "jest --watchAll",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/addon-interactions": "^7.6.6",
    "@storybook/addon-links": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-webpack5": "^7.6.6",
    "@storybook/test": "^7.6.6",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.45",
    "@types/react-datepicker": "^4.19.4",
    "@types/react-jss": "^10.0.0",
    "@types/testing-library__react": "^10.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle": "^0.14.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.6",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "ccmtypes": "^1.2.3",
    "react-datepicker": "^4.25.0",
    "react-jss": "^10.10.0",
    "react-select": "^5.8.0",
    "react-table-column-resizer": "^1.2.3"
  }
}
